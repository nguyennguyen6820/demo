
<div class="row">

    <div class="col-12">
        <h1>Sửa sản phẩm</h1>
    </div>
</div>

<div class="row">
    <div class="col-8">
        @if (!string.IsNullOrEmpty(ViewBag.Error))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @ViewBag.Error
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (!string.IsNullOrEmpty(ViewBag.Success))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @ViewBag.Success
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <form class="form" method="post">
            <div class="form-group">
                <label class="form-label">Tên sản phẩm</label>
                <input type="text" class="form-control" name="ProductName" placeholder="Nhập tên sản phẩm" value="@Model.ProductName">
            </div>
            <div class="form-group">
                <label class="form-label">Link ảnh sản phẩm</label>
                <input type="text" class="form-control" name="ProductPicture" placeholder="Nhập link" value="@Model.ProductPicture">
            </div>
            <div class="form-group">
                <label class="form-label">Danh mục</label>
                <select class="form-control" name="CategoryId"> 
                    <option>-- Chọn danh mục --</option> 
                    @foreach (var item in ViewBag.categories) 
                    { 
                        var selected = Model.CategoryId == item.Id ? true : false; 
                        <option value="@item.Id" selected="@selected">@item.Name</option> 
                    } 

                </select>
            </div>
            <button type="submit" class="btn btn-primary">Cập nhật</button>
        </form>
    </div>
</div>